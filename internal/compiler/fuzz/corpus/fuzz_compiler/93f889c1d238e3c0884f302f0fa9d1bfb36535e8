    preferred-height: 64px;
    layout := HorizontalBox {
        c := LineEdit {
            text: "0";
            edited(text) => {
                if (self.text.is-float()) {
                    f.text = (self.text.to-flo         / 5) + 32;
                }
             
  }       }
