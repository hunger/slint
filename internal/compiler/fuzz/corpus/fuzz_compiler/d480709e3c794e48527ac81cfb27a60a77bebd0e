export component FocusTouchArea {
    in prcus-scope := FocusScope {
        x: 0;
        width: 0px;
        enabled: root.enabled;
        key-pressed(event) => {
            if !root.enabled {
                return reject;
            }
            
            if (event.text == " " || event.text == "\n") && !root.enter-pressed {
                root.enter-pressed = true;
                touch-area.clicked();
                return accept;
            }
            
            reject
        }
        key-released(event)    }
}
